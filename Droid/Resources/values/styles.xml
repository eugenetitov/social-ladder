<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="Theme.Splash" parent="android:Theme">
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="Theme.MyTheme" parent="Theme.MyTheme.Base">
  </style>
  <!-- Base theme applied no matter what API -->
  <style name="Theme.MyTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>

    <item name="windowActionModeOverlay">true</item>
    
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">@color/primary</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">@color/primaryDark</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">@color/accent</item>
    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
    
    
    <!-- Option to hide the drop shadow here
    
      <item name="actionBarStyle">@style/MyTheme.ActionBar</item>
      <item name="android:windowContentOverlay">@null</item>
    -->
  </style>

  <style name="Theme.MyTheme.ActionBar" parent="style/Widget.AppCompat.Light.ActionBar.Solid">
    <!-- remove shadow below action bar -->
    <!-- <item name="android:elevation">0dp</item> -->
    <!-- Support library compatibility -->
    <item name="elevation">0dp</item>
  </style>

  <style name="Intro4.Progress" parent="ProgressStyle">
    <item name="android:layout_height">@dimen/intro4progress</item>
    <item name="android:progress">0</item>
    <item name="android:layout_width">@dimen/nullDp</item>
  </style>

  <style name="IntroActivity.Progress" parent="ProgressStyle">
    <item name="android:layout_height">@dimen/introActivity_progress</item>
    <item name="android:progress">4</item>
    <item name="android:layout_width">match_parent</item>
  </style>

  <style name="ProgressStyle" parent="Theme.MyTheme">
    <item name="android:layout_gravity">center</item>
    <item name="android:max">100</item>
    <item name="android:min">0</item>
    <item name="android:indeterminateOnly">false</item>
  </style>

  <style name="Intro4.Image" parent="Theme.MyTheme">
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">@dimen/nullDp</item>
  </style>
  
  <style name="Intro.BottomText" parent="Intro.Text" >
    <item name="android:textSize">@dimen/introBottomText</item>         
    <item name="android:gravity">center</item>
    <item name="android:textAlignment">center</item>
  </style>
  
  <style name="Intro3.ConstraintViews" parent="Theme.MyTheme">
    <item name="android:layout_width">@dimen/nullDp</item>
    <item name="android:layout_height">@dimen/nullDp</item>
  </style>
  
  <style name="Intro3.ConstraintText" parent="Theme.MyTheme">
    <item name="android:layout_width">@dimen/nullDp</item>
    <item name="android:textSize">@dimen/intro3_textSize</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textColor">@color/textIcon</item>
  </style>
  
  <style name="Intro.Text" parent="Theme.MyTheme">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">@dimen/nullDp</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:textColor">@color/textIcon</item>
  </style>

  <style name="Intro1.Text" parent="Theme.MyTheme">
    <item name="android:layout_height">@dimen/nullDp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:textColor">@color/textIcon</item>
  </style>

  <style name="LoginButton" parent="Theme.MyTheme">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">@dimen/nullDp</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:textColor">@color/textIcon</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textSize">@dimen/login_button_textSize</item>
  </style>

  <style name="AreasText" parent="Theme.MyTheme">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:textColor">@color/textIcon</item>
  </style>

  <style name="AreasCollectionText" parent="Theme.MyTheme">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:textColor">@color/textIcon</item>
    <item name="android:textSize">@dimen/areas_bottom_text</item>
  </style>

  <style name="AreaInviteButton" parent="Theme.MyTheme">
    <item name="android:layout_height">@dimen/nullDp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:background">@drawable/button_with_border</item>
    <item name="android:textColor">@color/areas_invite_button</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textSize">@dimen/login_button_textSize</item>
    <item name="android:layout_marginLeft">@dimen/areas_join_margin</item>
    <item name="android:layout_marginRight">@dimen/areas_join_margin</item>
  </style>

  <style name="AreaPopupCloseButton" parent="Theme.MyTheme">
    <item name="android:layout_height">@dimen/areas_description_close_button</item>
    <item name="android:layout_width">@dimen/areas_description_close_button</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="android:layout_alignParentTop">true</item>
    <item name="android:layout_alignParentRight">true</item>
    <item name="android:layout_marginTop">@dimen/areas_join_margin</item>
    <item name="android:layout_marginRight">@dimen/areas_join_margin</item>
  </style>
  
  <style name="AreaPopupJoinButton" parent="Theme.MyTheme">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:background">@color/areas_invite_button</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@color/textIcon</item>
  </style>

  <style name="AreaPopupText" parent="Theme.MyTheme">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:gravity">top</item>
    <item name="android:textColor">@color/areas_description_tex_color</item>
    <item name="android:textSize">@dimen/login_button_textSize</item>
    <item name="android:layout_marginBottom">@dimen/areas_margin</item>
    <item name="android:layout_marginTop">@dimen/areas_margin</item>
  </style>

  <style name="AreaPopupTitle" parent="Theme.MyTheme">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:textSize">@dimen/areas_description_title</item>
    <item name="android:textColor">@color/Black</item>
  </style>

  <style name="FeedActionIcon" parent="Theme.MyTheme">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_marginRight">4dp</item>
  </style>

  <style name="LinkButton" parnet="Theme.MyTheme">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="android:minHeight">0dp</item>
    <item name="android:minWidth">0dp</item>
    <item name="android:gravity">left</item>
  </style>

  <style name="FeedImageButton" parnet="Theme.MyTheme"> 
    <item name="android:background">@android:color/transparent</item> 
  </style>

  <style name="LeaderboardEarnButton" parnet="Theme.MyTheme">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:background">@drawable/points_earnMore_button</item>   
    <item name="android:paddingLeft">@dimen/areas_join_margin</item>
    <item name="android:paddingRight">@dimen/areas_join_margin</item>
    <item name="android:layout_marginTop">@dimen/button_left_padding</item>
    <item name="android:layout_marginBottom">@dimen/button_left_padding</item>
    <item name="android:textSize">@dimen/areas_section_text</item>
    <item name="android:layout_centerInParent">true</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="HintText" parent="TextAppearance.Design.Hint">
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@color/feed_cell_gray</item>
  </style>

  <style name="DetailsTitle" parnet="Theme.MyTheme">
    <item name="android:layout_marginLeft">12dp</item>
    <item name="android:layout_marginTop">15dp</item>
    <item name="android:textColor">@color/feed_cell_gray</item>
  </style>
  
</resources>